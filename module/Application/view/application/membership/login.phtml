<?php
/**
 * @var Laminas\View\Renderer\PhpRenderer $this
 */
?>
<?php
    $form = $this->loginform;
    $form->setAttribute('action', $this->url());
    $username = $form->get('username');
    $password = $form->get('password');
    $submit = $form->get('submit');
    $form->prepare();
?>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <?php if($this->message != null) : ?>
                <div class="alert alert-<?= $this->code == 1 ? "success" : "warning" ?>" role="alert"><?= $this->message ?></div>
            <?php endif; ?>
            <div class="card">
                <div class="card-header">Log in</div>
                <div class="card-body">
                    <?= $this->form()->openTag($form); ?>
                    <fieldset>
                        <div class="form-group">
                            <?= $this->formLabel($username) ?>
                            <?= $this->formElement($username) ?>
                            <?= $this->formElementErrors()->render($username, ['class' => 'help-block']) ?>
                        </div>

                        <div class="form-group">
                            <?= $this->formLabel($password) ?>
                            <?= $this->formElement($password) ?>
                            <?= $this->formElementErrors()->render($password, ['class' => 'help-block']) ?>
                        </div>
                    </fieldset>

                    <?php
                        echo $this->formSubmit($submit);
                        echo $this->formHidden($form->get('id'));
                        echo $this->form()->closeTag();
                    ?>
                </div>
            </div>
        </div>
    </div>
</div>