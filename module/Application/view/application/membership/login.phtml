<?php
    $form = $this->loginform;
    $form->setAttribute('action', $this->url());
    $email = $form->get('email');
    $password = $form->get('password');
    $captcha = $form->get('captcha');
    $submit = $form->get('submit');
    $form->prepare();
?>
<div class="jumbotron secondary-color">
    <div class="container">
        <h1 class="display-4">Log In</h1>
    </div>
</div>

<div class="container p-5">
    <?php if($this->message != null) : ?>
        <div class="alert alert-<?= $this->messageAlert ?>" role="alert"><?= $this->message ?></div>
    <?php endif; ?>
    <div class="d-flex justify-content-center">
        <div class="card">
            <div class="card-body">
                <?= $this->form()->openTag($form); ?>
                <fieldset>
                    <div class="form-group">
                        <?= $this->formLabel($email) ?>
                        <?= $this->formElement($email) ?>
                        <?= $this->formElementErrors()->render($email, ['class' => 'text-danger']) ?>
                    </div>

                    <div class="form-group">
                        <?= $this->formLabel($password) ?>
                        <?= $this->formElement($password) ?>
                        <?= $this->formElementErrors()->render($password, ['class' => 'text-danger']) ?>
                    </div>

                    <div class="form-group">
                        <?= $this->formElement($captcha) ?>
                        <?= $this->formElementErrors()->render($captcha, ['class' => 'text-danger']) ?>
                    </div>
                </fieldset>

                <?php
                    echo $this->formSubmit($submit);
                    echo $this->formHidden($form->get('id'));
                    echo $this->form()->closeTag();
                ?>
            </div>
            <div class="card-footer">
