 */
?>
<?php
    $form = $this->loginform;
    $form->setAttribute('action', $this->url());
    $username = $form->get('username');
    $password = $form->get('password');
    $submit = $form->get('submit');
    $form->prepare();
?>
<div class="container p-5">
    <?php if($this->message != null) : ?>
        <div class="alert alert-<?= $this->code == 1 ? "success" : "warning" ?>" role="alert"><?= $this->message ?></div>
    <?php endif; ?>
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header"><h3 class="display-5">Log in</h3></div>
            <div class="card-body">
                <?= $this->form()->openTag($form); ?>
                <fieldset>
                    <div class="form-group">
                        <?= $this->formLabel($username) ?>
                        <?= $this->formElement($username) ?>
                        <?= $this->formElementErrors()->render($username) ?>
                    </div>

                    <div class="form-group">
                        <?= $this->formLabel($password) ?>
                        <?= $this->formElement($password) ?>
                        <?= $this->formElementErrors()->render($password) ?>
                    </div>
                </fieldset>

                <?php
                    echo $this->formSubmit($submit);
                    echo $this->formHidden($form->get('id'));
                    echo $this->form()->closeTag();
                ?>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    Don't have an account? <a href="<?= $this->url('membership/register') ?>">Sign Up</a>
                </div>
                <div class="d-flex justify-content-center links">
                    Forgotten your password? <a href="<?= $this->url('membership/reset') ?>">Reset</a>
                </div>
            </div>
        </div>
    </div>
</div>
